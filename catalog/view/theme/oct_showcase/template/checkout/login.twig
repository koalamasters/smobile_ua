<div class="row">
	<div class="col-sm-6">
	    <div class="dark-text fw-500 mb-3">{{ text_new_customer }}</div>
	    <div class="mb-3">{{ text_checkout }}</div>
	    <div class="form-group mb-3">
		    <div class="form-check d-flex align-items-center mb-1 ps-3">
		    	<label class="form-check-label">
				    {% if account == 'register' %}
			        <input type="radio" id="checkout_register" name="account" value="register" checked="checked" class="form-check-input" />
			        {% else %}
			        <input type="radio" id="checkout_register" name="account" value="register" class="form-check-input" />
			        {% endif %}
			        <span class="radio-box"></span>
			        {{ text_register }}
		        </label>
		    </div>
		    {% if checkout_guest %}
		    <div class="form-check d-flex align-items-center mb-0 ps-3">
		    	<label for="checkout_guest" class="form-check-label">
			        {% if account == 'guest' %}
			        <input type="radio" id="checkout_guest" name="account" value="guest" checked="checked" class="form-check-input" />
			        {% else %}
			        <input type="radio" id="checkout_guest" name="account" value="guest" class="form-check-input" />
			        {% endif %}
			        <span class="radio-box"></span>
			        {{ text_guest }}
		        </label>
		    </div>
		    {% endif %}
		</div>
	    <div class="mb-3">{{ text_register_account }}</div>
	    <input type="button" value="{{ button_continue }}" id="button-account" data-loading-text="{{ text_loading }}" class="sc-btn sc-btn-primary br-4 mt-auto d-inline-flex w-auto" />
	</div>
	<div class="col-sm-6 pt-4 pt-md-0">
	    <div class="dark-text fw-500 mb-3">{{ text_returning_customer }}</div>
	    <div class="mb-2">{{ text_i_am_returning_customer }}</div>
	    <div class="form-group mb-3">
		    <label class="dark-text fsz-14 fw-500 mb-1" for="input-email">{{ entry_email }}</label>
		    <input type="text" name="email" value="" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
	    </div>
	    <div class="form-group">
		    <label class="dark-text fsz-14 fw-500 mb-1" for="input-password">{{ entry_password }}</label>
		    <input type="password" name="password" value="" placeholder="{{ entry_password }}" id="input-password" class="form-control mb-2" />
		    <a class="blue-link fsz-14" href="{{ forgotten }}">{{ text_forgotten }}</a>
		</div>
		<input type="button" value="{{ button_login }}" id="button-login" data-loading-text="{{ text_loading }}" class="sc-btn sc-btn-primary br-4 mt-3" />
	</div>
</div>
