{% if oct_banner_pluss %}
	{% if oct_banner_pluss|length <= 4 %}
		{% if position == 'column_left' or position == 'column_right' %}
			<div class="sc-column-banners overflow-hidden position-relative">
				<div id="banner_plus_column" class="sc-column-banners-box">
					{% set key = 0 %}
					{% for banner in oct_banner_pluss %}
						{% set key = key + 1 %}
						<div id="banner_plus_column{{ module }}_{{ key }}" class="sc-banner-plus-item">
							<div class="content-block h-100 d-flex flex-column align-items-center justify-content-center">
								<div class="sc-banner-plus-title fw-700 dark-text">{{ banner.title }}</div>
								<p class="mb-3">{{ banner.description }}</p>
								<a href="{{ banner.link }}" title="{{ banner.title }}" class="sc-banner-plus-item-img d-block mb-3">
									<img src="{{ banner.image }}"{% if oct_lazyload is defined and oct_lazyload %} data-srcset="{{ banner.image }} 100w" srcset="{{ oct_lazy_image }} 100w" sizes="100vw" class="oct-lazy"{% endif %} alt="{{ banner.title }}" width="{{ banner.width }}" height="{{ banner.height }}" />
								</a>
								<a href="{{ banner.link }}" class="sc-btn sc-btn-secondary br-4 w-100 mt-auto">{{ banner.button }}</a>
							</div>
						</div>
						<style>
							#banner_plus_column{{ module }}_{{ key }}.sc-banner-plus-item .content-block {background: {{ banner.background_color }};}
							#banner_plus_column{{ module }}_{{ key }} .sc-banner-plus-title {color: {{ banner.title_color }};}
							#banner_plus_column{{ module }}_{{ key }} p {color: {{ banner.text_color }};}
							#banner_plus_column{{ module }}_{{ key }} .sc-btn {color: {{ banner.button_color }}; background: {{ banner.button_background }};}
							#banner_plus_column{{ module }}_{{ key }} .sc-btn:hover {color: {{ banner.button_text_hover }} !important; background: {{ banner.button_background_hover }};}
						</style>
					{% endfor %}
				</div>
			</div>
			<script>
				window.addEventListener('DOMContentLoaded', () => {
					$('#banner_plus_column').slick({
						dots: false,
						infinite: true,
						prevArrow: '<button type="button" class="slick-slider-btn slick-slider-btn-prev sc-btn sc-btn-outline sc-btn-outline-secondary sc-btn-with-icon br-4 overflow-hidden d-flex align-items-center justify-content-center" aria-label="Previous"><span class="sc-btn-icon"></span></button>',
						nextArrow: '<button type="button" class="slick-slider-btn slick-slider-btn-next sc-btn sc-btn-outline sc-btn-outline-secondary sc-btn-with-icon br-4 overflow-hidden d-flex align-items-center justify-content-center" aria-label="Next"><span class="sc-btn-icon"></span></button>',
						slidesToShow: 1
					});
				});
			</script>
		{% else %}
			<div class="row pt-3 pt-xl-4 g-3 g-xl-4 sc-banner-plus">
				{% set key = 0 %}
				{% for banner in oct_banner_pluss %}
					{% set key = key + 1 %}
					<div id="banner_plus_{{ module }}_{{ key }}" class="sc-banner-plus-item{% if oct_banner_pluss|length == 1 %} sc-banner-plus-100{% elseif oct_banner_pluss|length == 2 %} sc-banner-plus-50{% elseif oct_banner_pluss|length == 3 %}{% if loop.index == 1 %} sc-banner-plus-50{% else %} sc-banner-plus-25{% endif %}{% elseif oct_banner_pluss|length == 4 %} sc-banner-plus-25{% endif %}">
						<div class="content-block h-100">
							<div class="sc-banner-plus-title fw-700 dark-text">{{ banner.title }}</div>
							<div class="sc-banner-plus-item-box d-flex align-items-start justify-content-between">
								<div class="sc-banner-plus-text d-flex flex-column align-items-start align-self-stretch justify-content-between">
									<p>{{ banner.description }}</p>
									<a href="{{ banner.link }}" class="sc-btn sc-btn-secondary br-4">{{ banner.button }}</a>
								</div>
								<a href="{{ banner.link }}" title="{{ banner.title }}" class="sc-banner-plus-item-img">
									<img src="{{ banner.image }}"{% if oct_lazyload is defined and oct_lazyload %} data-srcset="{{ banner.image }} 100w" srcset="{{ oct_lazy_image }} 100w" sizes="100vw" class="oct-lazy"{% endif %} alt="{{ banner.title }}" width="{{ banner.width }}" height="{{ banner.height }}" />
								</a>
							</div>
						</div>
					</div>
					<style>
						#banner_plus_{{ module }}_{{ key }}.sc-banner-plus-item .content-block {background: {{ banner.background_color }};}
						#banner_plus_{{ module }}_{{ key }} .sc-banner-plus-title {color: {{ banner.title_color }};}
						#banner_plus_{{ module }}_{{ key }} .sc-banner-plus-text p {color: {{ banner.text_color }};}
						#banner_plus_{{ module }}_{{ key }} .sc-btn {color: {{ banner.button_color }}; background: {{ banner.button_background }};}
						#banner_plus_{{ module }}_{{ key }} .sc-btn:hover {color: {{ banner.button_text_hover }} !important; background: {{ banner.button_background_hover }};}
					</style>
				{% endfor %}
			</div>
		{% endif %}
	{% endif %}
{% endif %}
