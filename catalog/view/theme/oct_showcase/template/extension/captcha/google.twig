<script src="//www.google.com/recaptcha/api.js"></script>
<fieldset>
    <legend class="h4 mb-0">{{ text_captcha }}</legend>
    <div class="form-group mb-4">
        {% if route|slice(0, 9) == 'checkout/' %}
            <label class="dark-text fsz-14 fw-500 mb-1" for="input-payment-captcha">{{ entry_captcha }}</label>
            <div id="input-payment-captcha" class="g-recaptcha" data-sitekey="{{ site_key }}"></div>
        {% else %}
            <label class="dark-text fsz-14 fw-500 mb-1">{{ entry_captcha }}</label>
            <div class="g-recaptcha" data-sitekey="{{ site_key }}"></div>
        {% endif %}
        {% if error_captcha %}
            <script>
                scNotify('danger', '{{ error_captcha }}');
            </script>
        {% endif %}
    </div>
</fieldset>
