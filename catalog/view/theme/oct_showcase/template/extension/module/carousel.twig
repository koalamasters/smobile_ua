{% if banners %}
<div class="row mt-3 mt-md-0 p-3 p-md-0 pt-xl-3 g-2 g-md-3 g-xl-4 sc-module">
	{% if heading_title is not empty %}
	<div class="sc-module-header fsz-22 dark-text fw-700 text-center text-md-start mt-0 mt-md-2 mb-2">
		{{ heading_title }}
	</div>
	{% endif %}
	<div id="sc-carousel-{{ module }}" class="sc-carousel-inner position-relative">
		{% for banner in banners %}
	  	<div class="sc-carousel-item">
			{% if banner.link %}
			<a href="{{ banner.link }}" class="content-block d-block">
			{% else %}
			<span class="content-block d-block">
			{% endif %}
				<img src="{{ banner.image }}" class="img-fluid" alt="{{ banner.title }}" width="{{ banner.width }}" height="{{ banner.height }}" />
				<span class="sc-carousel-title fw-700 fsz-14 dark-text">{{ banner.title }}</span>
			{% if banner.link %}
			</a>
			{% else %}
			</span>
			{% endif %}
	    </div>
		{% endfor %}
	</div>
</div>
<script>
$( document ).ready(function() {
	$('#sc-carousel-{{ module }}').slick({
		infinite: false,
		slidesToShow: 6,
		slidesToScroll: 1,
		autoplay: true,
		dots: false,
		arrows: true,
		prevArrow: '<button type="button" class="slick-slider-btn slick-slider-btn-prev sc-btn sc-btn-outline sc-btn-outline-secondary sc-btn-with-icon br-4 overflow-hidden"><span class="sc-btn-icon" aria-label="Previous"></span></button>',
		nextArrow: '<button type="button" class="slick-slider-btn slick-slider-btn-next sc-btn sc-btn-outline sc-btn-outline-secondary sc-btn-with-icon br-4 overflow-hidden"><span class="sc-btn-icon" aria-label="Next"></span></button>',
		responsive: [{
			breakpoint: 1600,
			settings: {
				slidesToShow: 6,
				slidesToScroll: 1
			}
		}, {
			breakpoint: 1200,
			settings: {
				slidesToShow: 4,
				slidesToScroll: 4
			}
		}, {
			breakpoint: 992,
			settings: {
				slidesToShow: 3,
				slidesToScroll: 3
			}
		}, {
			breakpoint: 480,
			settings: {
				slidesToShow: 2
			}
		}]
	});
});
</script>
{% endif %}
