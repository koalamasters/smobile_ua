{% if informations %}
    <div class="content-block p-0 overflow-hidden">
        <ul class="list-unstyled sc-column-categories fw-500 fsz-14 p-0">
            {% for information in informations %}
                <li class="sc-column-categories-item">
                    <span class="d-flex justify-content-between">
                        <a href="{{ information.href }}">{{ information.title }}</a>
                    </span>
                </li>
            {% endfor %}
            <li class="sc-column-categories-item">
                <span class="d-flex justify-content-between">
                    <a href="{{ contact }}">{{ text_contact }}</a>
                </span>
            </li>
            <li class="sc-column-categories-item">
                <span class="d-flex justify-content-between">
                    <a href="{{ sitemap }}">{{ text_sitemap }}</a>
                </span>
            </li>
        </ul>
    </div>
{% endif %}
