<div class="sc-account-module p-0 overflow-hidden">

    <div class="account-menu-button">
        <span class="sc-btn-icon sc-btn-icon-menu"></span>
        Меню
    </div>

    <script>
        $('.account-menu-button').click(function(){
            $('.account-menu').slideToggle()
        });
    </script>

    <ul class="list-unstyled sc-column-categories fsz-14 p-0 br-8 bg-white account-menu">
        {% if logged %}

            <li class="sc-column-categories-item first-menu-item {% if is_account_page %}active-menu-item{% endif %}">
                <a class="d-flex align-items-center" href="{{ account }}">
                    <span class="sc-account-module-icon br-8">
                        <img src="/image/icons/account/profile.svg" alt="" width="24" height="24">
                    </span>
                    <div>
                        <div class="d-flex flex-column">
                            <div class="fsz-14 fw-500 menu-item-user-name">{{ customer_info.firstname }} {{ customer_info.lastname }}</div>
                            <div class="menu-item-user-email">{{ customer_info.email }}</div>
                        </div>
                    </div>
                </a>
            </li>

            {#
            <li class="sc-column-categories-item {% if is_address_page %}active-menu-item{% endif %}">
                <a class="d-flex align-items-center" href="{{ address }}">
                    <span class="sc-account-module-icon br-8">
                        <img src="/image/icons/account/location.svg" alt="" width="24" height="24">
                    </span>
                    <span class="fw-500 km-text-dark">{{ text_address }}</span>

                    <span class="menu-item-count">{{ count_of_addresses }}</span>

                    <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
