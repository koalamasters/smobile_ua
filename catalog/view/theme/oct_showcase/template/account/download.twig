{{ header }}
<div id="account-download" class="container-fluid container-lg flex-grow-1 mobile-no-gutters">
	<nav aria-label="breadcrumb">
        <ul class="breadcrumb sc-breadcrumb fsz-12">
        {% for breadcrumb in breadcrumbs %}
            {% if loop.last %}
                <li class="breadcrumb-item sc-breadcrumb-item">{{ breadcrumb.text }}</li>
            {% else %}
                <li class="breadcrumb-item sc-breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endif %}
        {% endfor %}
        </ul>
    </nav>
	<main class="main">
		<div class="row">
			<div class="col-12 sc-page-title pb-3">
				<h1>{{ heading_title }}</h1>
			</div>
		</div>
		<div class="content-top-box">{{ content_top }}</div>
		<div class="row sc-account-row">
			{{ column_left }}
		    {% if column_left and column_right %}
		    	{% set class = 'col-xl-6' %}
		    {% elseif column_left or column_right %}
		    	{% set class = 'col-xl-9' %}
		    {% else %}
		    	{% set class = 'col-xl-12' %}
		    {% endif %}
		    <div id="content" class="{{ class }}">
				<div class="content-block p-3 p-md-4 mobile-no-radius">
					{% if downloads %}
						<div class="table-responsive-sm sc-account-table">
							<table class="table table-hover">
								<thead class="thead-dark">
									<tr>
										<th>{{ column_order_id }}</th>
										<th>{{ column_name }}</th>
										<th>{{ column_size }}</th>
										<th>{{ column_date_added }}</th>
									</tr>
								</thead>
								<tbody>
									{% for download in downloads %}
										<tr>
											<td>{{ download.order_id }}</td>
											<td>{{ download.name }} <a href="{{ download.href }}" data-toggle="tooltip" title="{{ button_download }}"><i class="fa fa-file-download"></i></a></td>
											<td>{{ download.size }}</td>
											<td>{{ download.date_added }}</td>
										</tr>
									{% endfor %}
								</tbody>
							</table>
						</div>
						<div class="row">
							<div class="col-sm-6 text-left">{{ pagination }}</div>
							<div class="col-sm-6 text-right">{{ results }}</div>
						</div>
					{% else %}
						<div class="fw-500 mb-3 dark-text">{{ text_empty }}</div>
					{% endif %}
					<a href="{{ continue }}" class="sc-btn sc-btn-primary br-4 sc-account-login-button">{{ button_continue }}</a>
				</div>
		    </div>
		    {{ column_right }}
		</div>
		{{ content_bottom }}
	</main>
</div>
{{ footer }}
