{{ header }}
<div id="account-reward" class="container-fluid container-lg flex-grow-1 mobile-no-gutters">
	<nav aria-label="breadcrumb">
        <ul class="breadcrumb sc-breadcrumb fsz-12">
        {% for breadcrumb in breadcrumbs %}
            {% if loop.last %}
                <li class="breadcrumb-item sc-breadcrumb-item">{{ breadcrumb.text }}</li>
            {% else %}
                <li class="breadcrumb-item sc-breadcrumb-item"><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
            {% endif %}
        {% endfor %}
        </ul>
    </nav>
	<main class="main">
		<div class="row">
			<div class="col-12 sc-page-title pb-3">
                <h1>{{ heading_title }}</h1>
            </div>
		</div>
		<div class="content-top-box">{{ content_top }}</div>
		<div class="row sc-account-row">
			{{ column_left }}
		    {% if column_left and column_right %}
                {% set class = 'col-xl-6' %}
            {% elseif column_left or column_right %}
                {% set class = 'col-xl-9' %}
            {% else %}
                {% set class = 'col-xl-12' %}
            {% endif %}
		    <div id="content" class="{{ class }}">
			    <div class="content-block p-3 p-md-4 mobile-no-radius">
			      	<div class="h3 mt-0">{{ text_total }} <b>{{ total }}</b>.</div>
					<div class="table-responsive-sm sc-account-table">
						<table class="table table-hover">
						<thead class="thead-dark">
							<tr>
							<th>{{ column_date_added }}</th>
							<th>{{ column_description }}</th>
							<th>{{ column_points }}</th>
							</tr>
						</thead>
						<tbody>
						{% if rewards %}
						{% for reward in rewards %}
						<tr>
							<td>{{ reward.date_added }}</td>
							<td>{% if reward.order_id %} <a href="{{ reward.href }}">{{ reward.description }}</a> {% else %}
							{{ reward.description }}
							{% endif %}</td>
							<td>{{ reward.points }}</td>
						</tr>
						{% endfor %}
						{% else %}
						<tr>
							<td colspan="3">{{ text_empty }}</td>
						</tr>
						{% endif %}
							</tbody>
						</table>
					</div>
					<div class="row mt-2 dark-text fsz-14 mb-4">
						<div class="col-sm-6 text-start">{{ pagination }}</div>
						<div class="col-sm-6 text-end">{{ results }}</div>
					</div>
					<a href="{{ continue }}" class="sc-btn sc-btn-primary br-4 sc-account-login-button">{{ button_continue }}</a>
			    </div>
		    </div>
		    {{ column_right }}
		</div>
		{{ content_bottom }}
	</main>
</div>
{{ footer }}
