{{ header }}
<div id="error-not-found">
    <div class="content-top-box">{{ content_top }}</div>
    <div class="content-block no-hover-shadow mobile-no-radius text-center">
        <div class="container"><h1>{{ heading_title }}</h1></div>
        {% if (oct_404_image is defined and oct_404_image is not empty) %}
            <div class="my-5"><img class="img-fluid" src="{{ oct_404_image }}" /></div>
        {% endif %}
        <div class="container">
            <div class="sc-404-content-text">
                {{ text_error }}
            </div>
        </div>
        <div class="img-wrapper"><img class="img-fluid" src="/catalog/view/theme/oct_showcase/img/404-new.png" alt="{{text_img_alt}}"></div>
        <div class="container"><a class="back-home" href="/">{{text_button}}</a></div>
    </div>
    <div class="content-bottom-box px-3 px-md-0">{{ content_bottom }}</div>
</div>
{{ footer }}
