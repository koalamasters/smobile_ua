{% if currencies|length > 1 %}
    <div id="oct_desktop_currency">
        <div id="currency" class="curency">
            <form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-currency" class="sc-switcher d-flex align-items-center p-2 br-12 ms-3">
                {% for currency in currencies %}
                <button type="button" class="currency-select br-4 fsz-12{% if currency.code == code %} active{% endif %}" name="{{ currency.code }}">
                    {% if currency.symbol_left %}
                    {{ currency.symbol_left }}
                    {% else %}
                    {{ currency.symbol_right }}
                    {% endif %}
                </button>
                {% endfor %}
                <input type="hidden" name="code" value="" />
                <input type="hidden" name="redirect" value="{{ redirect }}" />
            </form>
        </div>
    </div>
{% endif %}
