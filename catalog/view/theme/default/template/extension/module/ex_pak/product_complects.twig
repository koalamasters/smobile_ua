{% if complects %}
<div class="dop-product-kits">
	
	{% for complect in complects %}
		<div class="complect kit-{{ complect.complect_id }}">
			<div class="kit-title">{{ complect.name }}</div>
			
            <div class="dop-product-categories">
                {% if complect.categories|length > 1 %}
                    <div class="category-list category-list-double">
                        {% for category in complect.categories %}
                            <a class="category category-double" data-category-id="{{ category.category_id }}">
                                {{ category.name }}
                            </a>
                        {% endfor %}
                        <div class="toggle"><a><svg><use xlink:href="#ex-icon-arrow-down"></use></svg></a></div>
                    </div>
                {% endif %}
                {% for category in complect.categories %}
                    <div class="category-content category-content-{{ category.category_id }}">
                        <div class="kit-content dop-product-product-list">
                            <div class="swiper">
                                <div class="swiper-wrapper">
                                    {% for product in category.products %}
                                        <div class="kit-content swiper-slide">
                                            <div class="main-product">
                                                {{ main_product.html }}
                                            </div>
                                            <div class="plus">+</div>
                                            <div class="kit-product">
                                                {{ product.html }}
                                            </div>
                                            <div class="equal">=</div>
                                            <div class="kit-total">
                                                <div class="product" data-main-product-id="{{ main_product.product_id }}" data-kit-id="{{ product.complect_id }}" data-kit-product-id="{{ product.product_id }}" data-default-product-key="{{ product.product_key}}" data-cart-product-key="{{ product.cart_product_key}}">
                                                    <div class="price">
                                                        {% if product.complect_special %}
                                                            <div class="old-price">
                                                                <span>{{ product.complect_price }}</span>
                                                                {% if product.complect_discount_procent %}
                                                                    <span class="discount-procent">-{{ product.complect_discount_procent }}%</span>
                                                                {% endif %}
                                                            </div>
                                                            <div class="new-price">{{ product.complect_special }}</div>
                                                        {% else %}
                                                            {{ product.complect_price }}
                                                        {% endif %}
                                                        
                                                    </div>
                                                    <a class="button-cart{% if product.in_cart%} in-cart {% endif %}"><span class="ex-cart-btn-icon"></span><span class="ex-btn-text">{{ ex_pak_to_cart}}</span></a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                                <div class="swiper-pagination"></div>
                            </div>
                            {% if category.products|length > 1 %}
                                <a class="swiper-button prev"><svg><use xlink:href="#ex-icon-arrow-scroll"></use></svg></a>
                                <a class="swiper-button next"><svg><use xlink:href="#ex-icon-arrow-scroll"></use></svg></a>
                            {% endif %}
                        </div>
                    </div>
                {% endfor %}
            </div>
		</div>
	{% endfor %}
    <div style="position: absolute;	left: -9999px;">
		<svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink">
			<symbol xmlns="http://www.w3.org/2000/svg" id="dop-product-arrow" viewBox="0 0 448 512">
                <path d="M240.971 130.524l194.343 194.343c9.373 9.373 9.373 24.569 0 33.941l-22.667 22.667c-9.357 9.357-24.522 9.375-33.901.04L224 227.495 69.255 381.516c-9.379 9.335-24.544 9.317-33.901-.04l-22.667-22.667c-9.373-9.373-9.373-24.569 0-33.941L207.03 130.525c9.372-9.373 24.568-9.373 33.941-.001z"/>
            </symbol>
		</svg>
	</div>
</div>
{% endif %}