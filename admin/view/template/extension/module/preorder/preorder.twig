		url: 'index.php?route=extension/module/preorder/editPreOrders&user_token={{ user_token }}',
		success: function() {
			location.reload();
		}
	});
}

var country_key = {{ country_key }};

function addCountry() {
	html = '<tr id="country-row' + country_key + '">';
	html += '<td>';
	html += '<select name="module_preorder_countries[' + country_key + '][country_id]" class="form-control">';
	html += '<option value="">{{ text_select }}</option>';
	{% for country in countries %}
	html += '<option value="{{ country.country_id }}">{{ country.name }}</option>';
	{% endfor %}
	html += '</select>';
	html += '</td>';
	html += '<td>';
	html += '<input type="text" name="module_preorder_countries[' + country_key + '][code]" value="" placeholder="{{ entry_code }}" class="form-control" />';
	html += '<input type="text" name="module_preorder_countries[' + country_key + '][mask]" value="" placeholder="{{ entry_phone_mask }}" class="form-control" />';
	html += '</td>';
	html += '<td class="text-center">';
	html += '<a href="" id="thumb-image' + country_key + '" data-toggle="image" class="img-thumbnail"><img style="width: 30px;" src="{{ flag }}" alt="" title="" data-placeholder="{{ flag }}" /></a><input type="hidden" name="module_preorder_countries[' + country_key + '][image]" value="" id="input-image' + country_key + '" />';
	html += '</td>';
	html += '<td>';
	html += '<input type="text" name="module_preorder_countries[' + country_key + '][sort_order]" value="" placeholder="{{ entry_sort_order }}" class="form-control" />';
	html += '</td>';
	html += '<td>';
	html += '<select name="module_preorder_countries[' + country_key + '][default]" class="form-control">';
	html += '<option value="1">{{ text_enabled }}</option>';
	html += '<option value="0" selected="selected">{{ text_disabled }}</option>';
	html += '</select>';
	html += '</td>';
	html += '<td>';
	html += '<select name="module_preorder_countries[' + country_key + '][status]" class="form-control">';
	html += '<option value="1" selected="selected">{{ text_enabled }}</option>';
	html += '<option value="0">{{ text_disabled }}</option>';
	html += '</select>';
	html += '</td>';
	html += '<td class="text-right">';
	html += '<button type="button" onclick="$(\'#country-row' + country_key + '\').remove();" data-toggle="tooltip" title="{{ button_remove }}" class="btn btn-danger"><i class="fa fa-minus-circle"></i></button>';
	html += '</td>';
	html += '</tr>';

	$('#country tbody').append(html);
	
	country_key++;
}
