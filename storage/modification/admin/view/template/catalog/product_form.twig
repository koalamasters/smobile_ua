                           data-date-format="YYYY-MM-DD"
                           id="input-new_timer"
                           class="form-control"/>
                    <span class="input-group-btn">
                    <button class="btn btn-default" type="button"><i class="fa fa-calendar"></i></button>
                    </span>
                  </div>
                </div>
              </div>



			{% if product_oct_stickers is not empty %}
