<footer id="footer">{{ text_footer }}<br />{{ text_version }}</footer></div>

               {% if module_tinymce_status %}
               <script src="view/javascript/tinymce/tinymce.min.js"></script>
            <script>
            tinymce.init({
          selector: '[data-toggle=\'summernote\']',
          plugins: 'code print preview importcss searchreplace autolink autosave save directionality visualblocks visualchars fullscreen image link media template codesample table charmap hr pagebreak nonbreaking anchor toc insertdatetime lists wordcount imagetools textpattern noneditable help charmap emoticons',
          menubar: 'file edit view insert format tools table tc help',
          toolbar: 'undo redo | bold italic underline strikethrough | fontselect fontsizeselect formatselect | alignleft aligncenter alignright alignjustify | outdent indent |  numlist bullist checklist | forecolor backcolor casechange permanentpen formatpainter removeformat | insertfile image media link | code fullscreen preview print |  pageembed anchor codesample | pagebreak | charmap emoticons |  a11ycheck ltr rtl | showcomments addcomment',
          importcss_append: true,
          file_picker_callback: function (callback, value, meta) {       
            $('#modal-image').remove();
            $.ajax({
              url: 'index.php?route=common/filemanager&user_token=' + getURLVar('user_token') + '&filetype=' + meta.filetype,
              dataType: 'html',     
              success: function (html) {
                $('body').append('<div id="modal-image" class="modal">' + html + '</div>');
                $('#modal-image').modal('show');
                $('#modal-image').css("z-index", "9999");               
                $('#modal-image').delegate('a.thumbnail', 'click', function (e) {
                  e.preventDefault();
                  callback($(this).attr('href'), {
                    text: ''
                  });
                  $('#modal-image').modal('hide');
                });
              }
            });
          },
          {% if module_tinymce_language %}
          language: '{{ module_tinymce_language }}',
          {% endif %}
          height: 400,
          image_caption: true,
          quickbars_selection_toolbar: 'bold italic | quicklink h2 h3 blockquote quickimage quicktable',
          noneditable_noneditable_class: "mceNonEditable",
          toolbar_drawer: 'sliding',
          contextmenu: "link image imagetools table configurepermanentpen",
		  extended_valid_elements:"+body[style],style,link[href|rel]",
		  custom_elements:"style,link,~link"
        });
            </script>  
            {% endif %}
             
</body></html>
